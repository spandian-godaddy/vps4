            <version>1.2.0</version>
        </dependency>

        <!-- HFS Dependencies -->

        <dependency>
            <groupId>hfs</groupId>
            <artifactId>vhfs-nodeping-common-lib</artifactId>
            <version>1.3.0.5</version>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
