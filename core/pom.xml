            </exclusions>
        </dependency>

        <dependency>
            <groupId>hfs</groupId>
            <artifactId>vhfs-ecomm-common-lib</artifactId>
            <version>1.9.0.36</version>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>hfs</groupId>
            <artifactId>vhfs-plesk-common-lib</artifactId>
            <version>1.4.0.3</version>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
