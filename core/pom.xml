                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>hfs</groupId>
            <artifactId>vhfs-snapshot-common-lib</artifactId>
            <version>1.3.1.18</version>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
