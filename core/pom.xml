            </exclusions>
        </dependency>

        <dependency>
            <groupId>hfs</groupId>
            <artifactId>hhfs-request-lib</artifactId>
            <version>1.0.0.36115</version>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>hfs</groupId>
            <artifactId>vhfs-network-common-lib</artifactId>
            <version>1.2.0.64</version>
            <exclusions>
                <exclusion>
                    <groupId>*</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
            </exclusions>
        </dependency>


        <!-- https://mvnrepository.com/artifact/org.hamcrest/hamcrest-all -->
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-all</artifactId>
            <version>1.3</version>
            <scope>test</scope>
        </dependency>
        
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-text</artifactId>
            <version>1.2</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <profiles>
        <profile>
            <id>rebuild-database</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>
                        <version>1.5</version>

                        <dependencies>
                            <dependency>
                                <groupId>org.postgresql</groupId>
                                <artifactId>postgresql</artifactId>
                                <version>42.2.25</version>
                            </dependency>
                        </dependencies>

                        <configuration>
                            <driver>org.postgresql.Driver</driver>
                        </configuration>

                        <executions>
                            <execution>
                                <id>drop-create-database</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <url>jdbc:postgresql://${db.vps4.server}:${db.vps4.port}/${db.vps4.bootstrap.database}</url>
                                    <username>${db.vps4.bootstrap.username}</username>
                                    <password>${db.vps4.bootstrap.password}</password>
                                    <autocommit>true</autocommit>
                                    <delimiterType>row</delimiterType>
                                    <enableFiltering>true</enableFiltering>
                                    <srcFiles>
                                        <srcFile>${project.basedir}/sql/bootstrap/drop_db.sql</srcFile>
                                        <srcFile>${project.basedir}/sql/bootstrap/create_db.sql</srcFile>
                                    </srcFiles>
                                </configuration>
                            </execution>
                            <execution>
                                <id>drop-database-after-tests</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <url>jdbc:postgresql://${db.vps4.server}:${db.vps4.port}/${db.vps4.bootstrap.database}</url>
                                    <username>${db.vps4.bootstrap.username}</username>
                                    <password>${db.vps4.bootstrap.password}</password>
                                    <autocommit>true</autocommit>
                                    <delimiterType>row</delimiterType>
                                    <enableFiltering>true</enableFiltering>
                                    <srcFiles>
                                        <srcFile>${project.basedir}/sql/bootstrap/drop_db.sql</srcFile>
                                    </srcFiles>
                                </configuration>
                            </execution>
                        </executions>

                    </plugin>
                </plugins>
            </build>

        </profile>

    </profiles>
</project>
