[Unit]
Description=GD VPS4-Scheduler
After=network.target

[Service]
SyslogIdentifier=vps4
WorkingDirectory=/var/log/vps4/vps4-scheduler
ExecStart=/usr/bin/java $JVM_OPTS -jar /opt/vps4/vps4-scheduler/vps4-scheduler.jar start
ExecStop=/usr/bin/java $JVM_OPTS -jar /opt/vps4/vps4-scheduler/vps4-scheduler.jar stop

User=vps4
Group=vps4
Restart=always
RestartSec=20

[Install]
WantedBy=multi-user.target